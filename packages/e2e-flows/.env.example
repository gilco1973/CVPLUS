# E2E Testing Configuration

# Test Environment Configuration
E2E_BASE_URL=http://localhost:3000
E2E_API_URL=http://localhost:5001
E2E_TIMEOUT=300000
E2E_PARALLEL_TESTS=4
E2E_MOCK_APIS=true
E2E_API_DELAY=1000

# Firebase Configuration
FIREBASE_PROJECT_ID=cvplus-dev
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# External Service Configuration (for real API testing)
OPENAI_API_KEY=your-test-api-key
ANTHROPIC_API_KEY=your-test-api-key
ELEVENLABS_API_KEY=your-test-api-key
D_ID_API_KEY=your-test-api-key

# Test Data Configuration
MOCK_DATA_DIR=./test-data
MOCK_DATA_CACHE_DIR=./.cache/mock-data
MOCK_DATA_MAX_SIZE=104857600  # 100MB
TEST_ARTIFACTS_DIR=./test-results
TEST_LOGS_DIR=./logs

# Performance Testing
LOAD_TEST_CONCURRENT_USERS=10
LOAD_TEST_DURATION=300000  # 5 minutes
PERFORMANCE_THRESHOLD_P95=3000  # 3 seconds
REGRESSION_TOLERANCE=0.1  # 10% variance

# CI/CD Configuration
CI_TIMEOUT=1200000  # 20 minutes
CI_MEMORY_LIMIT=8192  # 8GB in MB
CI_PARALLEL_JOBS=4

# Debug and Logging
LOG_LEVEL=info
DEBUG=e2e:*
SAVE_ARTIFACTS=true
VERBOSE_LOGS=false

# Security Configuration
TEST_API_KEY=test-api-key-for-development
JWT_SECRET=test-jwt-secret-change-in-production
ENCRYPTION_KEY=test-encryption-key-32-chars!!

# Environment Flags
NODE_ENV=test
JEST_ENVIRONMENT=node