{
  "name": "cvplus-unified-module-requirements",
  "version": "1.0.0",
  "description": "Unified module requirements validation and template generation system for CVPlus",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && (chmod +x dist/cli/*.js 2>/dev/null || true)",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@types/glob": "^8.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs": "0.0.1-security",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.17.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "keywords": [
    "cvplus",
    "module-validation",
    "template-generation",
    "compliance",
    "typescript"
  ],
  "author": "CVPlus Team",
  "license": "MIT",
  "bin": {
    "cvplus-validator": "dist/cli/validator.js",
    "cvplus-generator": "dist/cli/generator.js",
    "cvplus-reporter": "dist/cli/reporter.js",
    "cvplus-migrator": "dist/cli/migrator.js"
  }
}
