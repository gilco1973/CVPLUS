{
  "name": "cvplus-unified-module-requirements",
  "version": "1.0.0",
  "description": "Unified module requirements validation and template generation system for CVPlus",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && (chmod +x dist/cli/*.js 2>/dev/null || true)",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "typescript": "^5.2.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0",
    "yaml": "^2.3.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "semver": "^7.5.4",
    "rimraf": "^5.0.1",
    "fast-json-stable-stringify": "^2.1.0",
    "json5": "^2.2.3",
    "minimatch": "^9.0.3",
    "chokidar": "^3.5.3",
    "tar": "^6.1.15",
    "graceful-fs": "^4.2.11",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^8.2.6",
    "@types/uuid": "^9.0.2",
    "@types/semver": "^7.5.0",
    "@types/lodash": "^4.14.195",
    "@types/nodemailer": "^6.4.8",
    "@types/tar": "^6.1.5",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "keywords": [
    "cvplus",
    "module-validation",
    "template-generation",
    "compliance",
    "typescript"
  ],
  "author": "CVPlus Team",
  "license": "MIT",
  "bin": {
    "cvplus-validator": "dist/cli/validator.js",
    "cvplus-generator": "dist/cli/generator.js",
    "cvplus-reporter": "dist/cli/reporter.js",
    "cvplus-migrator": "dist/cli/migrator.js"
  }
}
