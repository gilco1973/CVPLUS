# CVPlus Unified Module Requirements System Configuration

# =================================
# Server Configuration
# =================================
UMR_PORT=3001
UMR_HOST=0.0.0.0
UMR_ENVIRONMENT=development

# =================================
# API Configuration
# =================================
UMR_API_VERSION=v1
UMR_ENABLE_CORS=true
UMR_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# Rate Limiting
# =================================
UMR_RATE_LIMIT_WINDOW_MS=900000
UMR_RATE_LIMIT_MAX_REQUESTS=100

# =================================
# Validation Configuration
# =================================
UMR_MAX_CONCURRENT_VALIDATIONS=5
UMR_VALIDATION_TIMEOUT_MS=300000
UMR_ENABLE_STRICT_MODE=false

# =================================
# Build Configuration
# =================================
UMR_ENABLE_PARALLEL_BUILDS=true
UMR_BUILD_TIMEOUT_MS=600000

# =================================
# Logging Configuration
# =================================
UMR_LOG_LEVEL=info
UMR_ENABLE_REQUEST_LOGGING=true

# =================================
# Security Configuration
# =================================
UMR_ENABLE_HELMET=true
UMR_TRUST_PROXY=false

# =================================
# Cache Configuration
# =================================
UMR_ENABLE_CACHE=true
UMR_CACHE_TIMEOUT_MS=3600000

# =================================
# CVPlus Integration
# =================================
CVPLUS_ROOT=/Users/gklainert/Documents/cvplus

# =================================
# Development Configuration
# =================================
# Set to true for development mode features
NODE_ENV=development

# Enable detailed error messages in development
DEBUG=umr:*