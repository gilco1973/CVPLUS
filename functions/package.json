{
  "name": "cvplus-functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:batch": "node ../scripts/deployment/deploy-batch.js",
    "deploy:safe": "npm run fix-secrets && npm run build && npm run deploy:batch",
    "fix-secrets": "node ../scripts/deployment/fix-secrets-config.js",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cv-processing": "jest cv-processing.test.ts",
    "verify": "node src/tools/verification/test-verify-systems.js",
    "verify:emulator": "node src/tools/verification/test-verify-systems.js --mode=emulator",
    "verify:production": "node src/tools/verification/test-verify-systems.js --mode=production",
    "verify:mock": "node src/tools/verification/test-verify-systems.js --mode=mock",
    "emulators:start": "../scripts/verification/start-emulators.sh",
    "emulators:stop": "../scripts/verification/stop-emulators.sh",
    "verify:test": "ts-node src/tools/verification/test-runner.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@huggingface/hub": "^2.4.1",
    "@pinecone-database/pinecone": "^6.1.2",
    "@types/cors": "^2.8.19",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.2.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^154.1.0",
    "ical-generator": "^9.0.0",
    "isomorphic-dompurify": "^2.26.0",
    "mammoth": "^1.6.0",
    "nanoid": "^5.1.5",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
